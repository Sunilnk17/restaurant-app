{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@services/*": ["services/*"],
            "@models/*": ["models/*"],
            "@config/*": ["config/*"],
            "@io/*": ["io/*"],
            "@controllers/*": ["controllers/*"],
            "@schemas/*": ["schemas/*"],
            "@utils/*": ["utils/*"],
            "@repositories/*": ["repositories/*"],
            "@root/*": ["./*"],
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "decs/**/*"
    ]
}